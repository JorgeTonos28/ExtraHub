<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ExtraHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="hub-bg">
<nav class="navbar navbar-expand-lg glass mb-4">
    <div class="container">
        <a class="navbar-brand fw-bold text-white" href="/">ExtraHub</a>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <form asp-controller="Auth" asp-action="Logout" method="post" class="ms-auto">
                @Html.AntiForgeryToken()
                <button class="btn btn-outline-light btn-sm">Cerrar sesi√≥n</button>
            </form>
        }
    </div>
</nav>
<div class="container pb-5 fade-in">
    @if (TempData["Error"] is string e)
    {
        <div class="alert alert-danger"><i class="bi bi-exclamation-triangle me-2"></i>@e</div>
    }
    @if (TempData["Success"] is string s)
    {
        <div class="alert alert-success"><i class="bi bi-check-circle me-2"></i>@s</div>
    }
    @RenderBody()
</div>
</body>
</html>
