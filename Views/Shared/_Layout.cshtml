@{
    var path = Context.Request.Path.Value?.ToLowerInvariant() ?? "";
    var isAdmin = path.StartsWith("/admin");
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ExtraHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="app-bg">
<div class="app-shell">
    @if (isAdmin)
    {
        <aside class="sidebar-panel">
            <div class="brand-area">
                <div class="brand-icon"><i class="bi bi-grid-1x2-fill"></i></div>
                <div>
                    <strong>ExtraHub</strong>
                    <small>Admin Suite</small>
                </div>
            </div>
            <nav class="side-nav">
                <a href="/admin" class="side-link"><i class="bi bi-speedometer2"></i>Dashboard</a>
                <a href="/admin/usuarios" class="side-link"><i class="bi bi-people"></i>Usuarios</a>
                <a href="/admin/nomina" class="side-link"><i class="bi bi-receipt"></i>Nómina</a>
                <a href="/admin/departamentos" class="side-link"><i class="bi bi-diagram-3"></i>Departamentos</a>
                <a href="/admin/gerencias" class="side-link"><i class="bi bi-building"></i>Gerencias</a>
                <a href="/admin/ponchado" class="side-link"><i class="bi bi-clock-history"></i>Ponchado</a>
            </nav>
        </aside>
    }

    <main class="content-panel">
        <nav class="topbar-panel">
            <a class="logo-pill" href="/">ExtraHub</a>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <form asp-controller="Auth" asp-action="Logout" method="post" class="ms-auto">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-outline-secondary btn-sm">Cerrar sesión</button>
                </form>
            }
        </nav>

        <div class="container-fluid px-4 py-3 fade-in">
            @if (TempData["Error"] is string e)
            {
                <div class="alert alert-danger shadow-sm"><i class="bi bi-exclamation-triangle me-2"></i>@e</div>
            }
            @if (TempData["Success"] is string s)
            {
                <div class="alert alert-success shadow-sm"><i class="bi bi-check-circle me-2"></i>@s</div>
            }
            @RenderBody()
        </div>
    </main>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
