@model List<PayrollEntry>
@{
    var q = ViewBag.Query as string;
    decimal total = ViewBag.TotalSalary ?? 0m;
}
<div class="panel-card p-4 slide-up">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
        <div>
            <h3 class="mb-1">Nómina</h3>
            <p class="text-muted mb-0">Columnas legacy: Código, Nombre, Cédula, Departamento, Cargo o Posición, Salario, Compensación.</p>
        </div>
        <form method="post" action="/admin/nomina/actualizar" enctype="multipart/form-data" id="payrollUploadForm">
            @Html.AntiForgeryToken()
            <input type="file" name="payrollFile" id="payrollFile" class="d-none" accept=".xlsx" />
            <button type="button" class="btn btn-dark btn-sm" id="btnPayrollUpload"><i class="bi bi-upload me-1"></i>Actualizar nómina</button>
        </form>
    </div>

    <form method="get" class="mb-3">
        <input name="q" value="@q" class="form-control" placeholder="Buscar por cualquier columna (código, nombre, cédula, departamento, cargo, salario, compensación)..." />
    </form>

    <div class="mt-2 mb-2"><span class="badge text-bg-light">Sumatoria salario mensual: @total.ToString("N2")</span></div>

    <div class="table-responsive">
        <table class="table table-modern align-middle">
            <thead>
            <tr>
                <th>Código</th><th>Nombre</th><th>Cédula</th><th>Departamento</th><th>Cargo o Posición</th><th>Salario</th><th>Compensación</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var n in Model)
            {
                <tr>
                    <td>@n.EmployeeCode</td>
                    <td>@n.FullName</td>
                    <td>@n.Cedula</td>
                    <td>@n.Department</td>
                    <td>@n.Position</td>
                    <td>@n.MonthlySalary.ToString("N2")</td>
                    <td>@n.VehicleCompensation.ToString("N2")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
<script>
(() => {
  const picker = document.getElementById('payrollFile');
  const btn = document.getElementById('btnPayrollUpload');
  const form = document.getElementById('payrollUploadForm');
  btn?.addEventListener('click', () => picker?.click());
  picker?.addEventListener('change', () => {
    if (picker.files && picker.files.length > 0) form.submit();
  });
})();
</script>
}
