@model List<Department>
<div class="panel-card p-4 slide-up">
    <h3>Departamentos</h3>
    <p class="text-muted">Tipos permitidos: Dirección, Departamento, División, Sección, Centro, Área.</p>
    <div class="table-responsive">
        <table class="table table-modern"><thead><tr><th>Nombre</th><th>Tipo</th><th>Gerencia</th><th>Activo</th></tr></thead><tbody>@foreach(var d in Model){<tr><td>@d.Name</td><td>@d.Type</td><td>@d.Management?.Name</td><td>@(d.IsActive?"Sí":"No")</td></tr>}</tbody></table>
    </div>
</div>
