@model List<Department>
<h3 class="text-white">Departamentos</h3>
<p class="text-white-50">Tipos permitidos: Dirección, Departamento, División, Sección, Centro, Área.</p>
<table class="table table-dark"><thead><tr><th>Nombre</th><th>Tipo</th><th>Gerencia</th><th>Activo</th></tr></thead><tbody>@foreach(var d in Model){<tr><td>@d.Name</td><td>@d.Type</td><td>@d.Management?.Name</td><td>@d.IsActive</td></tr>}</tbody></table>
