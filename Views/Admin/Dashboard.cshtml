@model ExtraHub.Api.ViewModels.AdminDashboardViewModel
<div class="dashboard-header slide-up">
    <div>
        <h2>Dashboard Administrativo</h2>
        <p>Insights ejecutivos (demo) para monitorear salud operativa del Hub.</p>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-3"><div class="kpi-card"><span>Usuarios activos</span><h3>@Model.TotalUsers</h3></div></div>
    <div class="col-md-3"><div class="kpi-card"><span>Departamentos activos</span><h3>@Model.ActiveDepartments</h3></div></div>
    <div class="col-md-3"><div class="kpi-card"><span>Registros de nómina</span><h3>@Model.TotalPayroll</h3></div></div>
    <div class="col-md-3"><div class="kpi-card"><span>Ponchados consolidados</span><h3>@Model.TotalPunches</h3></div></div>
</div>

<div class="row g-3">
    <div class="col-lg-8">
        <div class="panel-card p-4">
            <h5>Tendencia operativa</h5>
            <p class="text-muted">Bloque visual de referencia para integrar métricas reales en siguiente iteración.</p>
            <div class="demo-chart"></div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel-card p-4">
            <h5>Acciones rápidas</h5>
            <div class="d-grid gap-2 mt-3">
                <a class="btn btn-dark" href="/admin/usuarios">Gestionar usuarios</a>
                <a class="btn btn-outline-dark" href="/admin/nomina">Actualizar nómina</a>
                <a class="btn btn-outline-dark" href="/admin/ponchado">Revisar ponchados</a>
            </div>
        </div>
    </div>
</div>
