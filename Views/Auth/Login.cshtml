@model ExtraHub.Api.ViewModels.LoginViewModel
<div class="row justify-content-center mt-5 slide-up">
    <div class="col-md-5 col-lg-4">
        <div class="auth-card">
            <h2><i class="bi bi-shield-lock"></i> Iniciar sesión</h2>
            <p>Accede a tu hub de productividad empresarial.</p>
            <form method="post" class="mt-4">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Usuario o correo</label>
                    <input asp-for="Login" class="form-control form-control-lg" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Contraseña</label>
                    <input asp-for="Password" class="form-control form-control-lg" />
                </div>
                <button class="btn btn-dark w-100 btn-lg">Entrar</button>
            </form>
        </div>
    </div>
</div>
